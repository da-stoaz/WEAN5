@page
@model PublicTransport.Pages.PublicTransports.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PublicTransport</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicTransport.TransportType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicTransport.TransportType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicTransport.IsEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicTransport.IsEnabled)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicTransport.HoursSinceLastService)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicTransport.HoursSinceLastService)
        </dd>
    </dl>

    <div class="form-group">
        <h4>Service Plans</h4>
        @if (Model.PublicTransport.ServicePlans.Any())
        {
            <table class="table">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PublicTransport.ServicePlans.First().Id)</th>
                    <th>Service Type</th>
                    <th>@Html.DisplayNameFor(model => model.PublicTransport.ServicePlans.First().TimeStamp)</th>
                    <th>Duration</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var plan in Model.PublicTransport.ServicePlans)
                {
                    <tr>
                        <td>@plan.Id</td>
                        <td>@plan.Type</td>
                        <td>@plan.TimeStamp</td>
                        <td>@plan.Duration</td>
                        <td>@plan.Description</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No service plans assigned to this public transport.</p>
        }
        
    </div>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PublicTransport.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
